{
  "name": "wdio-electron-service",
  "version": "3.5.0",
  "description": "WebdriverIO service to enable Electron testing",
  "author": "Sam Maister <goosewobbler@protonmail.com>",
  "homepage": "https://github.com/webdriverio-community/wdio-electron-service",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./main": {
      "import": "./dist/main.js",
      "require": "./dist/cjs/main.js"
    },
    "./preload": {
      "import": "./dist/preload.js",
      "require": "./dist/cjs/preload.js"
    }
  },
  "typeScriptVersion": "4.9.4",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": "^16.13 || >=18"
  },
  "scripts": {
    "init": "npm install -g pnpm && pnpm i",
    "prepare": "husky install",
    "ci": "pnpm build && pnpm test && pnpm lint && pnpm format:check",
    "clean": "rm -rf ./node_modules pnpm-lock.yaml ./dist",
    "clean:dist": "rm -rf ./dist",
    "build": "./scripts/build.sh",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs \"**/*.{j,mj,cj,t}s\"",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs \"**/*.{j,mj,cj,t}s\" --fix",
    "format": "prettier --write \"**/*.{j,t}s\"",
    "format:check": "prettier --check \"**/*.{j,t}s\"",
    "release": "release-it --github.release",
    "release:ci": "pnpm release --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "pnpm release patch",
    "release:minor": "pnpm release minor",
    "release:major": "pnpm release major",
    "test:unit": "vitest --coverage --watch=false",
    "test:dev": "vitest --coverage",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:integration": "pnpm test:build-app && cd example/e2e && pnpm clean && pnpm i && pnpm test",
    "test:build-app": "cd example/app && pnpm clean && pnpm i && pnpm build"
  },
  "keywords": [
    "webdriverio",
    "wdio",
    "wdio-service",
    "electron",
    "chromedriver",
    "tests"
  ],
  "peerDependencies": {
    "electron": "*"
  },
  "peerDependenciesMeta": {
    "electron": {
      "optional": true
    }
  },
  "dependencies": {
    "@electron/get": "^2.0.2",
    "@wdio/logger": "^8.1.0",
    "ci-info": "^3.7.1",
    "cross-dirname": "^0.1.0",
    "extract-zip": "^2.0.1",
    "import-meta-resolve": "^2.2.1",
    "wdio-chromedriver-service": "^8.0.1",
    "webdriverio": "^8.3.5"
  },
  "devDependencies": {
    "@types/chromedriver": "^81.0.1",
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitest/coverage-c8": "^0.28.4",
    "@wdio/cli": "^8.3.5",
    "@wdio/globals": "^8.3.5",
    "@wdio/types": "^8.3.0",
    "electron": "^23.0.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vitest": "^0.0.32",
    "eslint-plugin-wdio": "^8.0.14",
    "globals": "^13.20.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.4",
    "release-it": "^15.6.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.4"
  },
  "files": [
    "bin/*",
    "dist/*"
  ],
  "lint-staged": {
    "**/*.{yml,json,md,ts,js}": [
      "prettier --write"
    ]
  }
}
